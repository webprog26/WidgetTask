<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/widget_padding_horizontal"
    android:paddingTop="@dimen/widget_padding_vertical"
    android:paddingRight="@dimen/widget_padding_horizontal"
    android:paddingBottom="@dimen/widget_padding_vertical">
    <LinearLayout
        android:id="@+id/widgetMainField"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_main_field_height"
        android:orientation="horizontal"
        android:background="@drawable/widget_main_field">
        <TextView
            android:id="@+id/tvSearchResults"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"/>
        <ImageButton
            android:id="@+id/ibMakeSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_search_black_24dp"
            android:background="@android:color/transparent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ibRefresh"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_sync_black_24dp"
            android:background="@drawable/widget_button"/>
        <ImageButton
            android:id="@+id/ibShowOnMap"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_map_black_24dp"
            android:background="@drawable/widget_button"/>
    </LinearLayout>
</LinearLayout>